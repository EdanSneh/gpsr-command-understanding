{
  "dataset_reader": {
    "type": "my_seq2seq",
    "source_token_indexers": {
      "source_tokens": {
        "type": "single_id",
        "namespace": "source_tokens"
      },
      "bert": {
        "type": "bert-pretrained",
        "pretrained_model": "bert-base-uncased",
        "max_pieces": 150,
      }
    },
    "target_token_indexers": {
      "tokens": {
        "type": "single_id",
        "namespace": "tokens"
      }
    },
    "source_tokenizer": {
      "type": "word",
      "word_splitter": {
        "type": "bert-basic"
      }
    },
    "target_tokenizer": {
      "type": "word"
    }
  },
  "train_data_path": "data/train4.txt",
  "validation_data_path": "data/val.txt",
  "iterator": {
    "type": "bucket",
    "padding_noise": 0.0,
    "batch_size" : 16,
    "sorting_keys": [["target_tokens", "num_tokens"]]
  },
  "trainer": {
    "optimizer": {
      "type": "adam",
      "lr": 0.01
    },
    "learning_rate_scheduler": {
      "type": "noam",
      "warmup_steps": 1000,
      "model_size": 200
    },
    "num_serialized_models_to_keep": 1,
    "num_epochs": 1,
    "patience" : 30,
    "cuda_device": 0,
    "should_log_learning_rate": true,
    "should_log_parameter_statistics": false,
    "validation_metric": "+seq_acc"
  }
}
